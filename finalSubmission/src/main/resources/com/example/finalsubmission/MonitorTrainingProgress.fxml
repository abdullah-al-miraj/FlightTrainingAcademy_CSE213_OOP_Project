<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="20" alignment="TOP_CENTER" prefWidth="800" prefHeight="600">


    <Label text="Monitor Training Progress" style="-fx-font-size: 18px; -fx-font-weight: bold;" />


    <HBox spacing="10" alignment="CENTER">
        <Button text="Dashboard" fx:id="dashboardButton" />
        <Button text="Progress" fx:id="progressButton" style="-fx-font-weight: bold;" />
    </HBox>


    <VBox spacing="10" alignment="CENTER">
        <Label text="Task Overview" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <ListView fx:id="taskListView" prefHeight="200" prefWidth="700">
            <items>
                <StringItem text="Completed: 3 Tasks" />
                <StringItem text="Pending: 2 Tasks" />
                <StringItem text="Upcoming: 1 Task" />
            </items>
        </ListView>
    </VBox>


    <VBox spacing="10" alignment="CENTER">
        <Label text="Assessment and Quiz Scores" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <ListView fx:id="scoreListView" prefHeight="200" prefWidth="700">
            <items>
                <StringItem text="Quiz 1: 85%" />
                <StringItem text="Assessment 1: 90%" />
                <StringItem text="Quiz 2: 78%" />
            </items>
        </ListView>
    </VBox>


    <VBox spacing="10" alignment="CENTER">
        <Label text="Detailed Feedback" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <TextArea fx:id="feedbackArea" prefWidth="700" prefHeight="100" wrapText="true" editable="false" />
    </VBox>


    <VBox spacing="10" alignment="CENTER">
        <Label text="Set Goals for Improvement" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <TextArea fx:id="goalArea" prefWidth="700" prefHeight="100" wrapText="true" promptText="Enter your improvement goals here..." />
    </VBox>


    <HBox spacing="10" alignment="CENTER">
        <Button text="Export Progress Report" fx:id="exportReportButton" />
        <Button text="Log Out" fx:id="logoutButton" style="-fx-background-color: #dc3545; -fx-text-fill: white;" />
    </HBox>
</VBox>
